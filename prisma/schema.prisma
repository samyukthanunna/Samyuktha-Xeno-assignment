// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" if you are using MySQL
  url      = env("DATABASE_URL")
}

// Model for multi-tenancy: each store is a tenant
model Store {
  id                  Int        @id @default(autoincrement())
  shopifyShopDomain   String     @unique
  shopifyAccessToken  String
  customers           Customer[]
  orders              Order[]
  products            Product[]
}

// Model to store Shopify Customers
model Customer {
  id                Int      @id @default(autoincrement())
  shopifyCustomerId BigInt   @unique
  firstName         String?
  lastName          String?
  email             String?
  phone             String?
  
  store             Store    @relation(fields: [storeId], references: [id])
  storeId           Int
  orders            Order[]
}

// Model to store Shopify Orders
model Order {
  id               Int       @id @default(autoincrement())
  shopifyOrderId   BigInt    @unique
  totalPrice       Float
  processedAt      DateTime
  
  store            Store     @relation(fields: [storeId], references: [id])
  storeId          Int
  
  customer         Customer  @relation(fields: [customerId], references: [id])
  customerId       Int
}

// Model to store Shopify Products
model Product {
  id               Int      @id @default(autoincrement())
  shopifyProductId BigInt   @unique
  title            String
  vendor           String?
  
  store            Store    @relation(fields: [storeId], references: [id])
  storeId          Int
}